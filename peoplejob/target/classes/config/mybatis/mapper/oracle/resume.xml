	<select id="selectSearch" parameterType="map"  resultType="resumeVo">
		select *
		from
		(
		    select A.*, rownum as RNUM 
		    from
		    (
		        select 
		        r.resume_code,r.resumeTitle, r.resumeRegdate, r.opencheck,r.member_code
		       
		        
				from resume	r,member m
				<where>
				r.member_code=m.member_code and m.member_code=#{memberCode} 
				
				</where>	
				order by resume_code desc
		    ) A
		)
		<![CDATA[ where RNUM>#{firstRecordIndex}  
		and RNUM<=#{firstRecordIndex} + #{recordCountPerPage}]]>
	</select>
	
